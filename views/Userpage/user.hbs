<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-lg-3 col-md-4 col-sm-6 mt-0 mb-3 p-3">
                <div class="card" style="width: 100%; height: 540px ">
                    <div class="d-flex align-items-center justify-content-center p-2" style="height: 360px;">
                        <img src="/product-images/{{this._id}}.jpg" style="width:80%; height:auto " class="card-img-top"
                            alt="Card image cap">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">â‚¹ {{this.Price}}</h5>
                        <p class="card-text h6">{{this.Name}}</p>
                        <p class="card-text">{{this.Description}}</p>
                        <a href="#" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>