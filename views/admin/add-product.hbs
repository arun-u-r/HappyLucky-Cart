<section>
    <div class="container mt-4">
        <div class="row">

            <div class="col-md-6 ">
                <h2 class="text-center">Add Products</h2>
                <form action="/admin/add-product" method="post" enctype="multipart/form-data" class="mt-4" onsubmit="return validate()" >
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" id="addnameId">


                    <label for="">Category</label>
                    <input type="text" name="Category" class="form-control" id="addCategoryId">


                    <label for="">Price</label>
                    <input type="text" name="Price" class="form-control" id="addPriceId">

                    <label for="">Description</label>
                    <input type="text" name="Description" class="form-control" id="addDescriptionId">
                    <label for="">Image</label>
                    <input type="file" name="Image" class="form-control" id="addImageId">
                    
                    <button type="submit" class="btn btn-warning mt-4">Submit</button>
                </form>
            </div>


        </div>
    </div>
</section>


<script>
    function validate() {
        let formValidation = true
        if (document.getElementById("addnameId").value === "" || document.getElementById("addCategoryId").value === "" || document.getElementById('addPriceId').value === ""||document.getElementById('addImageId').value === "" ||document.getElementById('addDescriptionId').value==="") {
            formValidation = false
        } else {
            formValidation = true
        }
        return formValidation
    }
</script>